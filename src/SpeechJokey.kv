#:kivy 2.3.0

<MainScreen>:
    md_bg_color: self.theme_cls.secondaryContainerColor
    
    MDTopAppBar:
        type: "small"
        size_hint_x: 1
        pos_hint: {"center_x": .5, "top": 1}
        MDTopAppBarLeadingButtonContainer:
            MDActionTopAppBarButton:
                icon: "menu"
            MDFabButton:
                icon: "file-upload"
                style: "standard"
            MDFabButton:
                icon: "content-save"
                style: "standard"

        MDTopAppBarTitle:
            text: app.title

        MDTopAppBarTrailingButtonContainer:
            MDFabButton:
                icon: "play-circle"
                style: "standard"
            MDFabButton:
                icon: "account-voice"
                style: "standard"
    
    MDBoxLayout:
        adaptive_size: True
        orientation: 'vertical'
        
        MDScrollView:
            md_bg_color: app.theme_cls.primaryColor
            MDTextField:
                id: text_main
                mode: "filled"
                hint_text: 'Enter your text here or load from a file...'

    MDBottomAppBar:
        MDBoxLayout:
            orientation: 'horizontal'
            MDIcon:
                icon: "information-outline"
            MDLabel:
                id: label_status
                text: "Uhn tiss Uhn tiss Uhn tiss"

