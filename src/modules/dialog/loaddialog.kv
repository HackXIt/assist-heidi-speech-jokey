<LoadDialog>:
    load: load_button
    cancel: cancel_button
    filechooser: filechooser
    label: label
 
    # Providing the orientation
    orientation: 'vertical'
 
    # Creating the File list / icon view
     
    BoxLayout:
        orientation: "vertical"
        # Creating Icon view other side
        FileChooserIconView:
            size_hint_y: 0.9
            id: filechooser
            on_selection: root.on_browser_select(filechooser.selection)
            filters: ["*.txt"]
 
        BoxLayout:
            size_hint_y: 0.1
            # Adding label
            Label:
                id: label

            Button:
                id: cancel_button
                text: "Cancel"
                on_release: root.dismiss()

            Button:
                id: load_button
                text: "Load"
                on_release: root.on_fileload()
